<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bottom_tab_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/bottom_first_tab_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="首页"
        android:textColor="@drawable/bottom_text_color_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottom_tab_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/bottom_fourth_tab"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="首页"
        android:textColor="@drawable/bottom_text_color_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottom_tab_third"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/bottom_first_tab_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textColor="@drawable/bottom_text_color_bg"
        android:paddingTop="5dp"
        android:text="首页"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottom_tab_fourth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/bottom_fourth_tab"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="首页"
        android:textColor="@drawable/bottom_text_color_bg"
        android:textSize="16sp" />
</LinearLayout>
