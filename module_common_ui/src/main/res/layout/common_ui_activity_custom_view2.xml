<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.example.module_common_ui.view.animation.PathMeasureView2
        android:id="@+id/path_measure_view2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:text="滑动上面区域显示进度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_green_dark">
        <com.example.module_common_ui.view.textview.ScrollerTextView
            android:layout_width="50dp"
            android:background="@android:color/black"
            android:layout_height="50dp"/>
    </LinearLayout>
    <com.example.module_common_ui.view.textview.ScrollerTextView1
        android:layout_width="50dp"
        android:background="@android:color/holo_red_dark"
        android:layout_height="50dp"/>


</LinearLayout>